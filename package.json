{
  "name": "boilerplate-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --mode development",
    "dev:staging": "astro dev --mode staging",
    "dev:prod": "astro dev --mode production",
    "build": "yarn i18n:generate-types && astro build --mode production",
    "build:dev": "yarn i18n:generate-types && astro build --mode development",
    "build:staging": "yarn i18n:generate-types && astro build --mode staging",
    "preview": "astro preview --mode production",
    "preview:dev": "astro preview --mode development",
    "preview:staging": "astro preview --mode staging",
    "i18n:generate-types": "tsx scripts/i18n/generate-types.ts",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.10",
    "@astrojs/node": "^9.5.0",
    "@astrojs/react": "^4.4.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "astro": "^5.15.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "tsx": "^4.20.6"
  }
}
